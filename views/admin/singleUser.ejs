<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Rooms & Pins</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-green: #8cbf3a;
            --secondary-gray: #374151;
            --bg-dark: #1a1a1a;
            --bg-card: #262626;
            --bg-darker: #0f0f0f;
            --light-green: #a5d155;
            --dark-green: #75a832;
            --light-gray: #9ca3af;
            --dark-gray: #1f2937;
            --border-dark: #404040;
            --text-light: #e5e7eb;
            --text-gray: #9ca3af;
            --text-dark: #374151;
            --shadow-green: rgba(140, 191, 58, 0.15);
            --shadow-medium: rgba(140, 191, 58, 0.25);
            --shadow-heavy: rgba(0, 0, 0, 0.3);
            --hover-bg: #333333;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Quicksand', sans-serif;
            line-height: 1.6;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: linear-gradient(135deg, var(--bg-card), var(--secondary-gray));
            border: 1px solid var(--border-dark);
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px var(--shadow-heavy);
        }

        .header h1 {
            color: var(--primary-green);
            font-size: clamp(1.5rem, 4vw, 2.5rem);
            margin-bottom: 8px;
            font-weight: 600;
        }

        .user-info {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 16px;
        }

        .info-item {
            background: var(--bg-darker);
            padding: 12px 16px;
            border-radius: 8px;
            border: 1px solid var(--border-dark);
            flex: 1;
            min-width: 200px;
        }

        .info-label {
            color: var(--text-gray);
            font-size: 0.85rem;
            margin-bottom: 4px;
        }

        .info-value {
            color: var(--text-light);
            font-weight: 500;
        }

        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
        }

        .room-card {
            background: var(--bg-card);
            border: 1px solid var(--border-dark);
            border-radius: 12px;
            padding: 0;
            transition: all 0.3s ease;
            box-shadow: 0 2px 10px var(--shadow-heavy);
            overflow: hidden;
        }

        .room-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px var(--shadow-medium);
            border-color: var(--primary-green);
        }

        .room-header {
            background: linear-gradient(135deg, var(--secondary-gray), var(--dark-gray));
            padding: 20px;
            border-bottom: 1px solid var(--border-dark);
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .room-header:hover {
            background: linear-gradient(135deg, var(--hover-bg), var(--secondary-gray));
        }

        .room-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .room-name {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-light);
        }

        .room-id-container {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .room-id {
            font-family: 'Courier New', monospace;
            background: var(--bg-darker);
            padding: 6px 10px;
            border-radius: 6px;
            font-size: 0.85rem;
            color: var(--text-gray);
            border: 1px solid var(--border-dark);
        }

        .copy-btn {
            background: var(--primary-green);
            border: none;
            padding: 8px 12px;
            border-radius: 6px;
            color: white;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .copy-btn:hover {
            background: var(--dark-green);
            transform: scale(1.05);
        }

        .copy-btn:active {
            transform: scale(0.95);
        }

        .copy-btn.success {
            background: #10b981;
        }

        .pins-container {
            padding: 20px;
            display: none;
        }

        .pins-container.show {
            display: block;
        }

        .pins-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .pins-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-green);
        }

        .copy-all-pins {
            background: linear-gradient(135deg, var(--primary-green), var(--light-green));
            border: none;
            padding: 10px 16px;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .copy-all-pins:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px var(--shadow-medium);
        }

        .pins-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 12px;
        }

        .pin-item {
            background: var(--bg-darker);
            border: 1px solid var(--border-dark);
            border-radius: 8px;
            padding: 12px;
            transition: all 0.3s ease;
        }

        .pin-item:hover {
            border-color: var(--primary-green);
            background: var(--hover-bg);
        }

        .pin-id {
            font-family: 'Courier New', monospace;
            color: var(--text-light);
            font-size: 0.9rem;
            word-break: break-all;
        }

        .no-rooms {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-gray);
        }

        .no-rooms h2 {
            color: var(--primary-green);
            margin-bottom: 12px;
        }

        .no-pins {
            text-align: center;
            padding: 20px;
            color: var(--text-gray);
            font-style: italic;
        }

        .expand-icon {
            transition: transform 0.3s ease;
            color: var(--primary-green);
            font-size: 1.2rem;
        }

        .room-card.expanded .expand-icon {
            transform: rotate(180deg);
        }

        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--primary-green);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 500;
            z-index: 1000;
            transform: translateX(100%);
            transition: transform 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow-medium);
        }

        .toast.show {
            transform: translateX(0);
        }

        .back-btn {
            background: var(--secondary-gray);
            color: var(--text-light);
            text-decoration: none;
            padding: 12px 20px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            border: 1px solid var(--border-dark);
        }

        .back-btn:hover {
            background: var(--hover-bg);
            color: var(--primary-green);
            transform: translateX(-2px);
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .header {
                padding: 20px;
            }

            .user-info {
                flex-direction: column;
                gap: 12px;
            }

            .info-item {
                min-width: auto;
            }

            .rooms-grid {
                grid-template-columns: 1fr;
                gap: 16px;
            }

            .room-header {
                padding: 16px;
            }

            .room-title {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }

            .room-id-container {
                width: 100%;
                justify-content: space-between;
            }

            .room-id {
                flex: 1;
                margin-right: 8px;
            }

            .pins-grid {
                grid-template-columns: 1fr;
            }

            .pins-header {
                flex-direction: column;
                gap: 12px;
                align-items: stretch;
            }

            .toast {
                right: 15px;
                left: 15px;
                transform: translateY(-100%);
            }

            .toast.show {
                transform: translateY(0);
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 10px;
            }

            .header {
                padding: 16px;
            }

            .room-header {
                padding: 12px;
            }

            .pins-container {
                padding: 16px;
            }

            .copy-btn, .copy-all-pins {
                padding: 6px 10px;
                font-size: 0.75rem;
            }
        }

        /* Animation for expanding rooms */
        .pins-container {
            max-height: 0;
            opacity: 0;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .pins-container.show {
            max-height: 1000px;
            opacity: 1;
            display: block;
        }

        .profile-img {
            border: 3px solid var(--primary-green);
            border-radius: 50%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow-green);
        }

        .profile-img:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 20px var(--shadow-medium);
            border-color: var(--light-green);
        }
    </style>
</head>
<body>
    <div class="container">
        <a onclick="goBack()" class="back-btn">
            <span>←</span>
            Back
        </a>

        <div class="header">
            <h1>Client Details</h1>
            <div class="user-info">
                <% if (user.picture) { %>
                    <img src="<%- user.picture %>" alt="Profile picture of <%- user.name %>" class="profile-img"
                    width="80" height="80">
                <% } else { %>
                    <img src="/images/profile.png" alt="Default profile picture" class="profile-img" width="80"
                        height="80">
                <% } %>
                <div class="info-item">
                    <div class="info-label">Name</div>
                    <div class="info-value"><%= user.name %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value"><%= user.email %></div>
                </div>
                <% if (user.phone) { %>
                <div class="info-item">
                    <div class="info-label">Phone</div>
                    <div class="info-value"><%= user.phone %></div>
                </div>
                <% } %>
                <div class="info-item">
                    <div class="info-label">Status</div>
                    <% if(user.isActive){ %>
                        <div class="info-value" style="color: var(--primary-green)">
                            <%= user.isActive ? 'Active' : 'Inactive' %>
                        </div>
                    <% } else { %>
                        <div class="info-value" style="color: #ef4444 ">
                            <%= user.isActive ? 'Active' : 'Inactive' %>
                        </div>
                    <% } %>
                </div>
                <div class="info-item">
                    <div class="info-label">Client-ID</div>
                    <code><div class="info-value"><%= user._id %></div></code>
                </div>
            </div>
        </div>

        <% if (rooms && rooms.length > 0) { %>
            <div class="rooms-grid">
                <% rooms.forEach((room, index) => { %>
                    <div class="room-card" id="room-<%= index %>">
                        <div class="room-header" onclick="toggleRoom('<%= index %>')">
                            <div class="room-title">
                                <span class="room-name"><%= room.name || `Room ${index + 1}` %></span>
                                <span class="expand-icon">▼</span>
                            </div>
                            <div class="room-id-container">
                                <code class="room-id" id="roomId-<%= index %>"><%= room._id %></code>
                                <button class="copy-btn" onclick="copyToClipboard('roomId-<%= index %>', event)">
                                    <span>📋</span>
                                    Copy ID
                                </button>
                            </div>
                        </div>
                        
                        <div class="pins-container" id="pins-<%= index %>">
                            <% if (room.pins && room.pins.length > 0) { %>
                                <div class="pins-header">
                                    <h3 class="pins-title">Pins (<%= room.pins.length %>)</h3>
                                    <button class="copy-all-pins" onclick="copyAllPins('<%= index %>')">
                                        Copy All Pin IDs
                                    </button>
                                </div>
                                <div class="pins-grid">
                                    <% room.pins.forEach((pin, pinIndex) => { %>
                                        <div class="pin-item">
                                            <div class="pin-id" id="pinId-<%= index %>-<%= pinIndex %>">
                                                <%= pin._id %>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="no-pins">
                                    No pins available for this room
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-rooms">
                <h2>No Rooms Found</h2>
                <p>This user hasn't created any rooms yet.</p>
            </div>
        <% } %>
    </div>

    <script>
        function toggleRoom(index) {
            const roomCard = document.getElementById(`room-${index}`);
            const pinsContainer = document.getElementById(`pins-${index}`);
            
            roomCard.classList.toggle('expanded');
            pinsContainer.classList.toggle('show');
        }

        function copyToClipboard(elementId, event) {
            if (event) {
                event.stopPropagation();
            }
            
            const element = document.getElementById(elementId);
            const text = element.textContent.trim();
            
            navigator.clipboard.writeText(text).then(() => {
                showToast('Copied to clipboard!');
                
                // Visual feedback on button
                const btn = event ? event.currentTarget : null;
                if (btn) {
                    const originalText = btn.innerHTML;
                    btn.innerHTML = '<span>✓</span> Copied!';
                    btn.classList.add('success');
                    
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.classList.remove('success');
                    }, 2000);
                }
            }).catch(err => {
                console.error('Failed to copy: ', err);
                showToast('Failed to copy');
            });
        }

        function copyAllPins(roomIndex) {
            const pins = [];
            const pinsContainer = document.getElementById(`pins-${roomIndex}`);
            const pinElements = pinsContainer.querySelectorAll('.pin-id');
            
            pinElements.forEach(pin => {
                pins.push(pin.textContent.trim());
            });
            
            if (pins.length > 0) {
                const allPinsText = pins.join('\n');
                
                navigator.clipboard.writeText(allPinsText).then(() => {
                    showToast(`Copied ${pins.length} pin IDs!`);
                    
                    // Visual feedback on button
                    const btn = event.currentTarget;
                    const originalText = btn.innerHTML;
                    btn.innerHTML = `✓ Copied ${pins.length} Pins!`;
                    btn.style.background = '#10b981';
                    
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.style.background = '';
                    }, 3000);
                }).catch(err => {
                    console.error('Failed to copy: ', err);
                    showToast('Failed to copy pins');
                });
            }
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Auto-expand first room if it has pins
        document.addEventListener('DOMContentLoaded', () => {
            const firstRoom = document.querySelector('.room-card');
            const firstPinsContainer = document.querySelector('.pins-container');
            
            if (firstRoom && firstPinsContainer && firstPinsContainer.children.length > 0) {
                const firstRoomId = firstRoom.id.split('-')[1];
                if (document.getElementById(`pins-${firstRoomId}`).querySelector('.pin-item')) {
                    toggleRoom(parseInt(firstRoomId));
                }
            }
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                // Close all expanded rooms
                document.querySelectorAll('.room-card.expanded').forEach(room => {
                    room.classList.remove('expanded');
                });
                document.querySelectorAll('.pins-container.show').forEach(container => {
                    container.classList.remove('show');
                });
            }
        })

        function goBack(){
            window.history.back()
        }
    </script>
</body>
</html>