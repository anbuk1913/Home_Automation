        // Function to copy all names to clipboard
        async function copyAllUserNames() {
            if (userNamesCollection.length === 0) return;
            const roomId = document.getElementById('roomId').innerText
            const text = `Room-id: ${roomId} \n`
            const clipboardBtn = document.querySelector('.clipboard-button');
            const clipboardText = document.querySelector('.copy-text');
            
            try {
                // Create formatted text with numbers
                let formattedUserNames = userNamesCollection.map((userName, index) => 
                    `${userName}, `
                ).join('\n');
                formattedUserNames = text + formattedUserNames
                await navigator.clipboard.writeText(formattedUserNames);
                
                // Visual feedback
                clipboardBtn.classList.add('success-state');
                clipboardText.textContent = 'Copied!';
                
                // Reset after 2 seconds
                setTimeout(() => {
                    clipboardBtn.classList.remove('success-state');
                    clipboardText.textContent = 'Copy All';
                }, 2000);
                
            } catch (error) {
                console.error('Failed to copy names:', error);
                
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = userNamesCollection.join('\n');
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                clipboardText.textContent = 'Copied!';
                setTimeout(() => {
                    clipboardText.textContent = 'Copy All';
                }, 2000);
            }
        }

