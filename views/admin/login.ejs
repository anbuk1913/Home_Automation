<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Imbed Software - Admin</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <style>
        body, html {
            font-family: 'Quicksand', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #4e535c;
        }

        .container {
            width: 300px;
            height: auto;
            background: rgba(255, 255, 255, 0.603);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            padding: 40px;
        }

        .text-center {
            display: flex;
            justify-content: center;
        }

        .login-box h2 {
            margin: 0 0 30px;
            color: #23300d;
            text-transform: uppercase;
            text-align: center;
        }

        .user-box {
            position: relative;
            margin-bottom: 30px;
        }

        .user-box input {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: black;
            border: none;
            border-bottom: 1px solid gray;
            outline: none;
            background: transparent;
        }

        .user-box label {
            position: absolute;
            top: 10px;
            left: 0;
            font-size: 16px;
            color: black;
            pointer-events: none;
            transition: 0.5s;
        }

        .user-box input:focus ~ label,
        .user-box input:not(:placeholder-shown) ~ label {
            top: -20px;
            left: 0;
            color: #8cbf3a;
            font-size: 12px;
        }

        .error {
            color: red;
            font-size: 0.9em;
            margin-top: 4px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #8cbf3a;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #62852b;
        }
        @media (max-width: 480px) {
            .container {
                padding: 20px;
            }
            .login-box h2 {
                font-size: 20px;
            }
            button {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-box">
            <!-- Logo -->
            <div class="text-center mb-4">
                <img src="/images/logo.png" alt="Logo" style="width: 40px; height: auto;">
            </div>
            <h2>Admin Login</h2>
            <form id="loginForm" action="/adminVer" method="post">
                <div class="user-box">
                    <input type="text" id="email" name="email" placeholder=" " >
                    <label>Email</label>
                    <p id="emailError" class="error"></p>
                </div>
                <div class="user-box">
                    <input type="password" id="password" name="password" placeholder=" " >
                    <label>Password</label>
                    <p id="passwordError" class="error"></p>
                    <% if (adminError) { %>
                        <p style="color: red;display: flex;justify-content: center;">
                          <%=adminError%>
                        </p>
                    <% } %>
                </div>
                <button type="submit">Login</button>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('loginForm');
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');

            function validateField(input, errorElement, validatorFn, errorMessage) {
                const value = input.value.trim();
                if (!value) {
                    errorElement.textContent = 'This field is required.';
                    return false;
                }
                if (!validatorFn(value)) {
                    errorElement.textContent = errorMessage;
                    return false;
                }
                errorElement.textContent = '';
                return true;
            }

            function validateEmail(value) {
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
            }

            function validatePassword(value) {
                return value.length >= 6;
            }

            emailInput.addEventListener('blur', () => {
                validateField(
                    emailInput,
                    emailError,
                    (value) => value && validateEmail(value),
                    'Please enter a valid email address.'
                );
            });

            passwordInput.addEventListener('blur', () => {
                validateField(
                    passwordInput,
                    passwordError,
                    (value) => value && validatePassword(value),
                    'Password must be at least 6 characters long.'
                );
            });

            form.addEventListener('submit', (event) => {
                const isEmailValid = validateField(
                    emailInput,
                    emailError,
                    (value) => value && validateEmail(value),
                    'Please enter a valid email address.'
                );

                const isPasswordValid = validateField(
                    passwordInput,
                    passwordError,
                    (value) => value && validatePassword(value),
                    'Password must be at least 6 characters long.'
                );

                if (!isEmailValid || !isPasswordValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
    
</body>
</html>
